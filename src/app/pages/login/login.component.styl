.login
  padding: 12vh 1rem 1rem
  &__body
    display: flex;
    justify-content: center;
    max-width 1280px
    margin: 0 auto

.form
  max-width: 425px
  width: 100%

  &__title
    font-size: 1.2rem
    margin-bottom: 1rem

  &__row
    &:not(:last-child)
      margin-bottom: .8rem
  &__input
    box-sizing border-box
    padding: .5rem
    width: 100%

  &__footer
    margin-top: 1rem

  &__btn
    padding: .4rem .8rem
