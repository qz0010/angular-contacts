.contacts
  &__item
    &:not(:last-child)
      padding-bottom: .6rem
      margin-bottom: .8rem
      border-bottom: 1px solid #e2e2e2
  &__user
    display: flex;
    align-items center
    line-height: 1.3
    &-item
      margin-right: 1.2rem
    &-controls
      display: flex;
    &-control
      margin-right: .5rem
      cursor: pointer;
      & > i
        font-size: 1.4rem
