.contacts
  &__user
    line-height: 1.3
    &-row
      display: flex;
      align-items center
    &-item
      //width: 60%
      margin-right: 1.2rem
      &:last-child
        margin-right: 0
      &_user
        flex: 1 0 auto
    &-controls
      display: flex;
    &-control
      margin-right: .5rem
      cursor: pointer;
      & > i
        font-size: 1.4rem

.e-form
  &__row
    margin-bottom: .5rem
  &__input
    box-sizing border-box
    width: 100%
